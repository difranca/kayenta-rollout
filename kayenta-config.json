{
  "name": "kayenta-demo-config",
  "description": "canary configuration for the rollout kayenta-demo",
  "applications": ["kayenta-demo"],
  "judge": {
    "name": "NetflixACAJudge-v1.0",
    "judgeConfigurations": {}
  },
  "metrics": [
    {
      "name": "memory-usage",
      "query": {
        "type": "prometheus",
        "customInlineTemplate": "PromQL:avg(memory_usage{kubernetes_pod_name=~\".+${scope}\"})",
        "serviceType": "prometheus"
      },
      "groups": ["memory"],
      "analysisConfigurations": {
        "canary": {
          "critical": true,
          "nanStrategy": "remove",
          "direction": "increase",
          "effectSize": {
            "allowedIncrease": 1.1,
            "criticalIncrease": 2
          }
        }
      },
      "scopeName": "default"
    }
  ],
  "templates": {},
  "classifier": {
    "groupWeights": {
      "memory": 100
    }
  }
}
